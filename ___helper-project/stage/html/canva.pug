- var pageTitle = 'Canva'
<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        include pug/layout/styles
        title #{pageTitle}
    body 
        .page-wrapper.canva-page
            include pug/layout/sidebar
            include pug/layout/navbar
            main.page-content
                .container
                    .row.rtl                            
                        .col-md-8.offset-md-2.text-center.mb-3
                            .canva
                                img(src="./images/canva1-logo.png", alt="", srcset="")
                                h4.my-2 اختيار تصميم من canva
                                
                                .iframe-wrapper.box-shadow
                                    img(src="./images/canva-iframe.png", alt="", srcset="")
                         
                include pug/components/upload-to-print

            include pug/layout/footer           
        include pug/layout/js
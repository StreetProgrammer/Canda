- var pageTitle = 'Provider Account - Info'
<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        include pug/layout/styles
        title #{pageTitle}
    body 
        .page-wrapper.info-page
            include pug/layout/sidebar
            include pug/layout/navbar
            main.page-content
                .container
                    .row
                        .col-md-12
                            .spo-container.rtl
                                h4.sec-font.my-3 مزود الخدمة
                                .inner-menu-container
                                    include pug/components/user-inner-menu
                                    .inner-menu-content
                                        .back-to-bottom
                                            a(href="")
                                                span.arrow <i class="fas fa-long-arrow-alt-right"></i>
                                                | الرجوع إلى طلباتي
                                        .box-shadow.mb-3.white-bg
                                            .col-md-12.border-bottom
                                                .rtl.white-bg.p-3
                                                    form
                                                        .form-row
                                                            .col-md-6.mb-4
                                                                label.f-label(for='name') الإسم
                                                                input#name.form-control(type='text' required='')
                                                            .col-md-6.mb-4
                                                                label.f-label(for='phone') رقم الجوال
                                                                input#phone.form-control(type='tel' name='phone' required='')
                                                            .col-md-6.mb-4
                                                                label.f-label(for='email') البريد الإليكتروني
                                                                input#email.form-control(type='text' required='')
                                                            .col-md-6.mb-4
                                                                label.f-label(for='tradename') الإسم التجاري
                                                                input#tradename.form-control(type='text' required='')
                                                            .col-md-6.mb-4
                                                                label.f-label(for='country') الدولة
                                                                select#country.form-control(required='')
                                                            .col-md-6.mb-4
                                                                label.f-label(for='city') المدينة
                                                                select#city.form-control(required='')
                                                            .col-md-12.mb-4
                                                                button.btn.btn-primary.pull-left(type='submit') تحديث      
                                            .row
                                                .col-md-6
                                                    .rtl.white-bg.p-3
                                                        form
                                                            .form-row
                                                                .col-md-12.mb-4
                                                                    h5.sec-font.bold تحديث البريد الإليكتروني
                                                                .col-md-12.mb-4
                                                                    label.f-label(for='email') البريد الإليكتروني
                                                                    input#email.form-control(type='email' required='')
                                                                .col-md-12.mb-4
                                                                    label.f-label(for='new-email') البريد الإليكتروني الجديد
                                                                    input#new-email.form-control(type='email' required='')
                                                                .col-md-12.mb-4
                                                                    label.f-label(for='password') كلمة المرور
                                                                    input#password.form-control(type='password' name='password' required='')
                                                                .col-md-12.mb-4
                                                                    button.btn.btn-primary.pull-left(type='submit') تحديث 
                                                .col-md-6
                                                    .rtl.white-bg.p-3
                                                        form
                                                            .form-row
                                                                .col-md-12.mb-4
                                                                        h5.sec-font.bold تحديث كلمة المرور
                                                                .col-md-12.mb-4
                                                                    label.f-label(for='password') كلمة المرور الحالية
                                                                    input#password.form-control(type='password' name='password' required='')
                                                                .col-md-12.mb-4
                                                                    label.f-label(for='password') كلمة المرور الجديدة
                                                                    input#password.form-control(type='password' name='password' required='')
                                                                .col-md-12.mb-4
                                                                    label.f-label(for='password') تأكيدكلمة المرور الجديدة
                                                                    input#password.form-control(type='password' name='password' required='')
                                                                .col-md-12.mb-4
                                                                    button.btn.btn-primary.pull-left(type='submit') تحديث 

            include pug/layout/footer           
        include pug/layout/js